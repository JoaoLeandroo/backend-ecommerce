generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  admin Admin[]

  @@map("usuario")
}

model Categories {
  id String @id @default(uuid())
  nameCategorie String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  produto Produto []

  @@map("categorie")
}

model Produto {
  id String @id @default(uuid())
  nomeProduto String
  quantidade Int
  valorProduto Float
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  
  categories Categories @relation(fields: [categorieId], references: [id])
  categorieId String

  @@map("produto")
}


model Admin {
  id String @id @default(uuid())
  createAt DateTime @default(now())

  usuario Usuario @relation(fields: [nameId], references: [id])
  nameId String

  @@map("admin")
}